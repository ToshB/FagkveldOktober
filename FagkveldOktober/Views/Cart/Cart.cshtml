@model FagkveldOktober.Models.CartViewModel
<div class="page-header">
<h2>Cart</h2>
</div>

<div data-bind="ifnot: Content().length == 0">
    <div data-bind="foreach: Content">
        <span data-bind="text: Title"></span>
        <span data-bind="text: Quantity"></span>
        <span data-bind="formatMoney: {oere: SumTotalInOere}"></span>
    </div>
    <span data-bind="formatMoney: {oere: SumTotalInOere}"></span>
@Html.ActionLink("Confirm", "Checkout", "Cart", new {@class="btn btn-default btn-success"})
</div>
<div data-bind="if: Content().length == 0">Your cart is empty</div>


@section AdditionalScripts
{
    <script type="text/javascript">
        var data = @Html.Raw(new System.Web.Script.Serialization.JavaScriptSerializer().Serialize(Model));

        var viewModel = ko.mapping.fromJS(data);

        ko.applyBindings(viewModel);
    </script>
}
