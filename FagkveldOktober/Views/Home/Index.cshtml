@using FagkveldOktober
@model FagkveldOktober.Models.HomeIndexViewModel
<div class="page-header">
    <h2>Available for sale</h2>
</div>
<div class="row">
    <div class="col-lg-3" ng-repeat="book in booksAvailableForSale">
        <div class="panel media panel-default book">
            <div class="panel-body">
                <a href="{{book.url}}">
                    <span class="pull-left">
                        <img class="cover" height="150" width="100" ng-src="/Content/images/{{book.coverFilename}}" />
                    </span>
                    <div class="media-body">
                        <p class="author">{{book.author}}</p>
                        <p>{{book.title}}</p>
                        <p>{{book.priceInOere/100 | currency:"kr "}}</p>
                    </div>
                </a>
            </div>

        </div>
    </div>


</div>
@section AdditionalScripts
{
    <script>
        window.bookStoreData = @Html.Serialize(Model);
    </script>
}
